# ============================================
# isA Platform Staging Environment Configuration
# ============================================
# SECURITY: This file should NEVER be committed to version control.
# Copy from .env.example and populate with actual values.

# ============================================
# Environment Type
# ============================================
ENVIRONMENT=staging
DEBUG=false

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=<your-aws-account-id>
ECR_REGISTRY=<your-account-id>.dkr.ecr.us-east-1.amazonaws.com
ECS_CLUSTER=isa-platform-cluster-staging

# ============================================
# Database Configuration (Using Supabase Cloud for Staging)
# ============================================
# Supabase Cloud (Pro Plan - $25/month)
SUPABASE_URL=https://<your-project-ref>.supabase.co
SUPABASE_ANON_KEY=<your-supabase-anon-key>
SUPABASE_SERVICE_ROLE_KEY=<your-supabase-service-role-key>
DATABASE_URL=postgresql://postgres:<your-db-password>@db.<your-project-ref>.supabase.co:5432/postgres?search_path=staging
DB_SCHEMA=staging

# ============================================
# Neo4j Aura Configuration (Professional - $65/month)
# ============================================
NEO4J_URI=neo4j+s://<your-neo4j-instance>.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=<your-neo4j-password>
NEO4J_DATABASE=neo4j

# ============================================
# Service Discovery (ECS Service Discovery)
# ============================================
CONSUL_HOST=consul.staging.isa.local
CONSUL_PORT=8500
CONSUL_ENABLED=true

# ============================================
# Message Queue (ECS Service Discovery)
# ============================================
NATS_URL=nats://nats-1.staging.isa.local:4222,nats://nats-2.staging.isa.local:4222,nats://nats-3.staging.isa.local:4222

# ============================================
# Cache (Redis) - ECS Service Discovery
# ============================================
REDIS_URL=redis://redis.staging.isa.local:6379

# ============================================
# External Services (需要实际的 API keys)
# ============================================
# AI/ML
OPENAI_API_KEY=<your-openai-api-key>
REPLICATE_API_TOKEN=<your-replicate-api-token>
HF_TOKEN=<your-huggingface-token>

# Auth
AUTH0_DOMAIN=<your-auth0-domain>
AUTH0_AUDIENCE=<your-auth0-audience>
AUTH0_CLIENT_ID=<your-auth0-client-id>
AUTH0_CLIENT_SECRET=<your-auth0-client-secret>

# Payment
STRIPE_API_KEY=<your-stripe-api-key>
STRIPE_WEBHOOK_SECRET=<your-stripe-webhook-secret>

# Search
BRAVE_TOKEN=<your-brave-search-token>

# Email
RESEND_API_KEY=<your-resend-api-key>

# ============================================
# Security Configuration
# ============================================
JWT_SECRET_KEY=<your-jwt-secret-key-min-32-chars>
ENCRYPTION_KEY=<your-32-character-encryption-key>
MCP_API_KEY=<your-mcp-api-key>
REQUIRE_MCP_AUTH=true
REQUIRE_AUTH=true

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Service Ports (Internal Docker Network)
# ============================================
GATEWAY_PORT=8000
MCP_PORT=8081
MODEL_PORT=8082
AGENT_PORT=8080
# User Services
ACCOUNT_SERVICE_PORT=8201
AUTH_SERVICE_PORT=8202
AUTHORIZATION_SERVICE_PORT=8203
EVENT_SERVICE_PORT=8101
DEVICE_SERVICE_PORT=8220
OTA_SERVICE_PORT=8221
TELEMETRY_SERVICE_PORT=8225
